<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60bda1"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CadEnderecoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Estamos quase lá.
Só precisamos de mais
algumas informações"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Agora, por favor, preencha
os campos abaixo sobre o seu endereço"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Os campos marcados com um * são obrigatorios"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/endereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/shape_edit_text"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text=" Endereço(rua+numero) *"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/complemento_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/complemento"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_text"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=" Complemento *"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/cep"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_text"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=" CEP"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/shape_edit_text"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text=" Bairro *"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/cidade_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cidade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_text"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=" Cidade *"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/estado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_text"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=" Estado *"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/voltar_avancar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/voltar"
            style="?android:textAppearanceSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_buttom_voltar"
            android:text="Voltar"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/avancar"
            style="?android:textAppearanceSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_buttom_avancar"
            android:text="Avançar"
            android:textColor="#60bda1"
            android:textStyle="bold"/>


    </LinearLayout>


</LinearLayout>